<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_background">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/home_background"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="120dp"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false">

            <TextView
                android:id="@+id/pageTitle"
                style="@style/H1Heading"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="32dp"
                android:gravity="left"
                android:text="@string/settings_tab"
                android:textColor="#4F4F5B"
                android:textSize="36dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/dataManagementMenuLayout"
                style="@style/SettingsMenuLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/pageTitle">

                <TextView
                    style="@style/SettingsMenuItem.Header"
                    android:text="@string/settings_data_management" />

                <LinearLayout
                    android:id="@+id/dataLoadButton"
                    style="@style/SettingsMenuItemArrowLayout">

                    <TextView
                        style="@style/SettingsMenuItem.WithArrow"
                        android:text="@string/settings_data_load" />

                    <include layout="@layout/settings_menu_item_arrow" />
                </LinearLayout>

                <include layout="@layout/settings_menu_item_divider" />

                <TextView
                    android:id="@+id/dataRecoveryButton"
                    style="@style/SettingsMenuItem"
                    android:text="@string/settings_data_recovery" />

                <include layout="@layout/settings_menu_item_divider" />

                <TextView
                    android:id="@+id/dataDeleteButton"
                    style="@style/SettingsMenuItem"
                    android:text="@string/settings_data_deletion" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="top"
        android:background="@drawable/gradient_home_top" />
</FrameLayout>
