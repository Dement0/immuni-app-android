<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/upload_data"
    app:startDestination="@id/insertUploadDataCodeFragment">
    <fragment
        android:id="@+id/insertUploadDataCodeFragment"
        android:name="org.ascolto.onlus.geocrowd19.android.ui.uploadData.InsertUploadDataCodeFragment"
        android:label="InsertUploadDataCode"
        tools:layout="@layout/insert_upload_data_code_fragment"/>

    <fragment
        android:id="@+id/instructionFragment"
        android:name="org.ascolto.onlus.geocrowd19.android.ui.uploadData.WhereToFindTheCodeFragment"
        android:label="Instruction"
        tools:layout="@layout/insert_code_where_icanfind_dialog"/>

    <fragment
        android:id="@+id/uploadSuccessFragment"
        android:name="org.ascolto.onlus.geocrowd19.android.ui.uploadData.UploadDataSuccessFragment"
        android:label="Success"
        tools:layout="@layout/upload_data_success_fragment"/>

    <action
        android:id="@+id/action_global_instruction"
        app:destination="@id/instructionFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />

    <action
        android:id="@+id/action_global_success"
        app:destination="@id/uploadSuccessFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />
</navigation>
