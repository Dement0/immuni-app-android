<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_relative"
    app:startDestination="@id/profileFragment">
    <fragment
        android:id="@+id/profileFragment"
        android:name="org.ascolto.onlus.geocrowd19.android.ui.addrelative.fragment.profile.RelativeProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/onboarding_profile_fragment"/>
    <fragment
        android:id="@+id/interruptFragment"
        android:name="org.ascolto.onlus.geocrowd19.android.ui.addrelative.fragment.InterruptFragment"
        android:label="doneFragment"
        tools:layout="@layout/add_relative_interrupt_fragment">
        <argument
            android:name="title"
            app:argType="string" />
        <argument
            android:name="message"
            app:argType="string" />
    </fragment>
    <action
        android:id="@+id/action_interrupt"
        app:destination="@id/interruptFragment"
        app:enterAnim="@anim/slide_in_right"
        app:exitAnim="@anim/slide_out_left"
        app:popEnterAnim="@anim/slide_in_left"
        app:popExitAnim="@anim/slide_out_right" />
</navigation>
